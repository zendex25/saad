<div class="sad_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>

	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>
<div class="story">
			<div>
				<label for="uname">Username:</label>
				<%= text_field_tag :name, params[:name] %>
			</div><br>

			<div>
				<label for="pass">Password:</label>
				<%= password_field_tag :password, params[:password] %>
			</div><br>

			<div>
				<%= submit_tag "Login" %>
			</div></div>
		</fieldset>
	<% end %>
</div>
